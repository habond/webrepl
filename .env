# Web REPL Environment Configuration
#
# This file contains default environment variables for the Multi-Language Web REPL.
# All services respect these variables with sensible fallback defaults.
#
# For local development customization, create .env.local (git-ignored)
# For production deployment, modify these values or use container orchestration

# Application Ports
FRONTEND_PORT=8080
BACKEND_PORT=8000
VITE_DEV_PORT=5173

# Environment
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:8080

# Service URLs (for container communication)
SESSION_MANAGER_URL=http://session-manager:8000
PYTHON_BACKEND_URL=http://backend-python:8000
JAVASCRIPT_BACKEND_URL=http://backend-javascript:8000
RUBY_BACKEND_URL=http://backend-ruby:8000
PHP_BACKEND_URL=http://backend-php:8000
KOTLIN_BACKEND_URL=http://backend-kotlin:8000
HASKELL_BACKEND_URL=http://backend-haskell:8000
BASH_BACKEND_URL=http://backend-bash:8000

# Frontend Configuration
SESSION_REFRESH_INTERVAL=30000

# Container Hostnames
SESSION_MANAGER_HOST=session-manager
PYTHON_BACKEND_HOST=backend-python
JAVASCRIPT_BACKEND_HOST=backend-javascript
RUBY_BACKEND_HOST=backend-ruby
PHP_BACKEND_HOST=backend-php
KOTLIN_BACKEND_HOST=backend-kotlin
HASKELL_BACKEND_HOST=backend-haskell
BASH_BACKEND_HOST=backend-bash

# Database Configuration
DATABASE_PATH=./data/sessions.db